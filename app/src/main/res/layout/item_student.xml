<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/img_student"
        android:src="@drawable/avatardefault"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/img_student"
        android:layout_marginLeft="16dp"
        android:id="@+id/ll">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hetor Tolo"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/nickname_student"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Última vez en: Cafetería"
            android:id="@+id/location_student"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Programa: Ingeniería de Sistemas"
            android:id="@+id/program_student"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puntaje: 950"
            android:id="@+id/points_student"/>
    </LinearLayout>
</RelativeLayout>